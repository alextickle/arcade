<html>
<head>
  <title>Black Jack</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
  <link href="https://fonts.googleapis.com/css?family=Diplomata+SC" rel="stylesheet">
  <link href="/css/blackJack.css" type="text/css" rel="stylesheet"/>
  <script src="/js/jquery-3.1.1.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js" integrity="sha384-Tc5IQib027qvyjSMfHjOMaLkfuWVxZxUPnCJA7l2mCWNIpG9mGCD8wGNIcPD7Txa" crossorigin="anonymous"></script>
  <script src="/js/blackJack.js"></script>
</head>
<body>
  <div class="container">
    <div class="row">
      <div id="title" class="col-sm-12">
        <h3>Black Jack</h3>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h5>DEALER</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <img id="d0" src="">
      </div>
      <div class="col-sm-2">
        <img id="d1" src="">
      </div>
      <div class="col-sm-2">
        <img id="d2" src="">
      </div>
      <div class="col-sm-2">
        <img id="d3" src="">
      </div>
      <div class="col-sm-2">
        <img id="d4" src="">
      </div>
      <div class="col-sm-2">
        <img id="d5" src="">
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <h5>PLAYER</h5>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-2">
        <img id="p0" src="">
      </div>
      <div class="col-sm-2">
        <img id="p1" src="">
      </div>
      <div class="col-sm-2">
        <img id="p2" src="">
      </div>
      <div class="col-sm-2">
        <img id="p3" src="">
      </div>
      <div class="col-sm-2">
        <img id="p4" src="">
      </div>
      <div class="col-sm-2">
        <img id="p5" src="">
      </div>
    </div><br>
    <div id="header" class="row">
      <div class="col-sm-5">
        <p id="dealerComment"></p>
      </div>
      <div class="col-sm-5">
        <button class="active" id="start" type="button">Deal</button>
        <button class="inactive" id="hit" type="button">Hit</button>
        <button class="inactive" id="stay" type="button">Stay</button>
      </div>
      <div class="col-sm-2">
        <button class="inactive" id="replay" type="button"><a href="/blackjack">Play Again</a></button>
      </div>
    </div>
  </div>
</body>
</html>
